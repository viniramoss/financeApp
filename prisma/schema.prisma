generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id          Int             @id @default(autoincrement())
  name        String
  amount      Float
  description String?
  date        DateTime
  type        TransactionType

  @@map("transactions")
}

model PaymentMethod {
  id    Int     @id @default(autoincrement())
  name  String
  img   String? // URL da imagem
  color String? // cor hexadecimal

  @@map("payMethod")
}

enum TransactionType {
  INCOME
  EXPENSE
}
